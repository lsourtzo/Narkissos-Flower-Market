<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- hide status bar -->
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="InfoText" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorGreen</item>
        <item name="android:textSize">@dimen/BodySize</item>
        <item name="android:paddingTop">@dimen/OuterSpace</item>
        <item name="android:paddingRight">@dimen/InerSpace</item>
    </style>

    <style name="InfoIcon" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_marginTop">@dimen/InerSpace</item>
        <item name="android:layout_marginLeft">@dimen/OuterSpace</item>
        <item name="android:layout_marginRight">@dimen/InerSpace</item>
    </style>


    <style name="CreatedByText" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorBackground</item>
        <item name="android:textColor">@color/colorGreen</item>
        <item name="android:textSize">@dimen/BodySize</item>
        <item name="android:paddingTop">@dimen/SmallSpace</item>
        <item name="android:paddingBottom">@dimen/SmallSpace</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="InerText" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorGreen</item>
        <item name="android:paddingTop">@dimen/InerSpace</item>
    </style>

    <style name="TitleStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorT</item>
        <item name="android:textColor">@color/colorGreen</item>
        <item name="android:paddingLeft">@dimen/OuterSpace</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="LineStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/LineSpace</item>
        <item name="android:background">@color/colorL</item>
    </style>

    <style name="ImagesRibon" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/InerSpace</item>
        <item name="android:adjustViewBounds">true</item>
    </style>




</resources>
